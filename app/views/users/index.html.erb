<% provide(:title, 'All Users') %>
<h1>All users</h1>

<%= will_paginate %>

<table class="table table-sm">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
        <td><%= user.first_name + " " + user.last_name %></td>
        <td><%= user.email %></td>
        <td><% if current_user.admin? && !current_user?(user) %>
             <%= link_to "delete", user, method: :delete,
                data: {confirm: "You sure?"} %>
             <% end %>
        </td>
    </tr>
    <% end %>
</table>

<%= will_paginate %>