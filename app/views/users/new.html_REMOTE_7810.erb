<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <div class = "form_group">
          <%= f.label :name, :class => "control-label col-sm-4"%>
          <%= f.text_field :name, :placeholder => "Name", :class => "control-label col-sm-8" %>
        </div>
        <div class = "form_group">
          <%= f.label :email, :class => "control-label col-sm-4" %>
          <%= f.email_field :email, :placeholder => "Email", :class => "control-label col-sm-8" %>
        </div>
        <div class = "form_group">
          <%= f.label :password, :class => "control-label col-sm-4" %>
          <%= f.password_field :password, :placeholder => "Password", :class => "control-label col-sm-8" %>
         </div>
        <div class = "form_group">
          <%= f.label :password_confirmation, :class => "control-label col-sm-4" %>
          <%= f.password_field :password_confirmation, :placeholder => "Confirmation", :class => "control-label col-sm-8" %>
         </div>  
        <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>