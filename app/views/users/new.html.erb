<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :email %>
        <%= f.email_field :email %>
        
        <%= f.label :password %>
        <%= f.password_field :password %>
        
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>
        
        <h4>Please select all of your health concerns:</h4>
        <ul>
        <% HealthConcern.all_concerns.each do |h| %>
          <li>
          <%= check_box_tag "concerns[#{h}]", value = "1", checked = false %>
          <%= h%>
          </li>
        <% end %>
        </ul>

        
        <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>